<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.NavFragments.RequestedKOT.Confirm_Cancel_Order">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/confirm_cancelkot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:titleTextColor="@color/white"
        app:layout_constraintHeight_percent="0.1"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Confirm/Cancel KOT" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/confirm_cancelRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_3sdp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/confirm_cancelkot" />

    <ProgressBar
        android:id="@+id/progressbar_confcanorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_cancelRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/confirm_cancelkot" />

    <LinearLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.20" >



        <Button
            android:id="@+id/print_kot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_imgbutton_confirm"
            android:text="Print KOT"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_3sdp"
            android:drawableStart="@drawable/ic_print_white"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
          />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>