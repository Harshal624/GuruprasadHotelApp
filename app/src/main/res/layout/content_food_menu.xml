                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@drawable/custom_food_button"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/rice_noodlees"
                            android:textColor="#ffffff" />


                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

