<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Time"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.126" />

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/time" />

    <TextView
        android:id="@+id/table_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Table No."
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintWidth_percent="0.123" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/table_no" />

    <TextView
        android:id="@+id/table_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Table type"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintWidth_percent="0.126" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/table_type" />

    <TextView
        android:id="@+id/payment_mode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Payment"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintWidth_percent="0.124" />

    <View
        android:id="@+id/view4"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/payment_mode" />

    <TextView
        android:id="@+id/bill_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Bill No."
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view4"
        app:layout_constraintWidth_percent="0.124" />

    <View
        android:id="@+id/view5"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/bill_no" />

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Subtotal"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintWidth_percent="0.124" />

    <View
        android:id="@+id/view6"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/subtotal" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Discount"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view6"
        app:layout_constraintWidth_percent="0.124" />

    <View
        android:id="@+id/view7"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/discount" />

    <TextView
        android:id="@+id/total_cost"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Total"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/view7"
        app:layout_constraintWidth_percent="0.124" />

</androidx.constraintlayout.widget.ConstraintLayout>